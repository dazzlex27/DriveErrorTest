<Window x:Class="DriveErrorTest.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        mc:Ignorable="d"
        Title="Тестирование" SizeToContent="Height"
		ResizeMode="CanMinimize"
		Width="300" Background="White" Closing="Window_Closing" Icon="Firstfear-Whistlepuff-Usb.ico">
    <Grid Margin="5">
		<Grid.RowDefinitions>
			<RowDefinition />
            <RowDefinition/>
            <RowDefinition/>
            <RowDefinition/>
            <RowDefinition/>
            <RowDefinition/>
        </Grid.RowDefinitions>
        <GroupBox Grid.Row="0" Margin="3,0,3,3">
			<GroupBox.Header>
				<TextBlock Text="Параметры тестирования"/>
			</GroupBox.Header>
			<StackPanel>
            <Label Margin="3,0"  
				   Content="Выбор диска:"/>
            <ComboBox Name="CbDrives"
					  Margin="3,0"
					  Padding="10,5"/>
            <Label Margin="3,3,3,0" 
				   Content="Период перезаписи данных:"/>
            <ComboBox Name="CbTimePeriod" 
					  Margin="3,0,3,3"
					  Padding="10,5"/>
        </StackPanel>
        </GroupBox>
        <GroupBox Grid.Row="2" Margin="3">
            <GroupBox.Header>
                <TextBlock Text="Путь к данным"/>
            </GroupBox.Header>
            <StackPanel>
				<StackPanel>
                <Label Name="LbInputPath" 
					   Margin="0,3,3,0"
				   MaxWidth="270"
				   HorizontalAlignment="Left"
				   Content="&lt;Источник данных не выбран&gt;"/>
                <Button Name="BtSelectSourcePath" 
						Margin="3,0,3,3"
						Padding="10,5"
						HorizontalAlignment="Left" 
						Content="Выбрать папку с данными..."
						Click="BtSelectTestData_OnClick"/>
				</StackPanel>
				<StackPanel>
					<Label Name="LbLogPath" 
					   Margin="0,3,3,0"
				   MaxWidth="270"
				   HorizontalAlignment="Left"
				   Content="&lt;Журнал не выбран&gt;"/>
					<Button Name="BtSelectLogPath" 
						Margin="3,0,3,3"
						Padding="10,5"
						HorizontalAlignment="Left" 
						Content="Выбрать файл журнала..."
						Click="BtSelectLogPath_OnClick"/>
				</StackPanel>
			</StackPanel>
        </GroupBox>
        <Button Name="BtLaunchTesting" Margin="6,5"
				Padding="10,5"
				HorizontalAlignment="Left" 
				Grid.Column="0" 
				Grid.Row="3" 
				Content="Запустить тестирование"
				Click="BtLaunchTesting_OnClick"/>
        <Button Name="BtShowLog" 
				Margin="6,5"
				Padding="10,5"
				HorizontalAlignment="Left" 
				Grid.Column="0" 
				Grid.Row="4" 
				Content="Открыть лог"
				Click="BtShowLog_OnClick"/>
        <StackPanel Grid.Column="0" 
					Grid.Row="5">
		<StackPanel Orientation="Horizontal">
			<Label Margin="3,0,0,0" Content="Состояние:"/>
			<Label Name="LbStatusStrip" Margin="0,0,0,0"/>
		</StackPanel>
			<StackPanel Orientation="Horizontal">
                <Label Margin="3,0,0,0" Content="Циклов записи:"/>
                <Label Name="LbWriteCyclesStrip" Margin="0,0,0,0"/>
            </StackPanel>
            <StackPanel Orientation="Horizontal">
                <Label Margin="3,0,0,0" Content="Текущий файл:"/>
                <Label Name="LbCurrFileStrip" Margin="0,0,0,0"/>
            </StackPanel>
        </StackPanel>
    </Grid>
</Window>
