<Window x:Class="DriveErrorTest.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        mc:Ignorable="d"
        Title="Тестирование" SizeToContent="WidthAndHeight"
		ResizeMode="CanMinimize"
		Background="White" Closing="Window_Closing" Icon="Firstfear-Whistlepuff-Usb.ico" >
	<StackPanel>
		<Menu>
			<MenuItem Header="Файл">
				<MenuItem Name="BtShowLog" Header="Открыть лог" Click="BtShowLog_OnClick"></MenuItem>
				<Separator/>
				<MenuItem Header="Выход" Click="MenuItem_OnClick"></MenuItem>
			</MenuItem>
		</Menu>

		<DataGrid>
			<DataGrid.Columns>
				<DataGridTextColumn Header="Состояние"/>
				<DataGridTextColumn Header="Наименование"/>
				<DataGridTextColumn Header="Статус"/>
			</DataGrid.Columns>
			
		</DataGrid>
	</StackPanel>
</Window>
